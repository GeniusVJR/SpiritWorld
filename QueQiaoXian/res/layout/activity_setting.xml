    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="#ffdadada" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_switch_notification"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:padding="10.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:text="提示音"
                        android:textColor="#ff353535"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/iv_switch_open_notification"
                        android:layout_width="70.0dip"
                        android:layout_height="22.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/open_icon"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_switch_close_notification"
                        android:layout_width="70.0dip"
                        android:layout_height="22.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/close_icon"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.100000024dip"
                    android:background="#ffdadada" />

                <RelativeLayout
                    android:id="@+id/rl_switch_sound"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:padding="10.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:text="声音"
                        android:textColor="#ff353535"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/iv_switch_open_sound"
                        android:layout_width="70.0dip"
                        android:layout_height="22.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/open_icon"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_switch_close_sound"
                        android:layout_width="70.0dip"
                        android:layout_height="22.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/close_icon"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.100000024dip"
                    android:background="#ffdadada" />

                <RelativeLayout
                    android:id="@+id/rl_switch_vibrate"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:padding="10.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:text="设置2"
                        android:textColor="#ff353535"
                        android:textSize="16.0sp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.100000024dip"
                    android:background="#ffdadada" />

                <RelativeLayout
                    android:id="@+id/rl_switch_speaker"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true"
                    android:padding="10.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:text="设置3"
                        android:textColor="#ff353535"
                        android:textSize="16.0sp" />
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.100000024dip"
                    android:background="#ffdadada" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:background="@drawable/divider"
                android:gravity="center|left"
                android:paddingLeft="10.0dip"
                android:text="   关于我们"
                android:textColor="#ff353535"
                android:textSize="16.0sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>