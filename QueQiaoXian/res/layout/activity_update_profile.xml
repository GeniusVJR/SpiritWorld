<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_changePassword_bgLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_updateProfile_toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" >
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/activity_updateProfile_toolBar" >

        <EditText
            android:id="@+id/activity_updateProfile_profile"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView1"
            android:background="@drawable/bg_white_cornor"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/textColorPrimary" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            android:text="请输入您的签名：" />

        <zhp.iyalee2.views.buttons.Button_colorstike_whitetext
            android:id="@+id/activity_updateProfile_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_updateProfile_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:onClick="onConfirmClick"
            android:text="确认修改" />
    </RelativeLayout>

</RelativeLayout>